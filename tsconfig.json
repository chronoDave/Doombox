{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist"
  },
  "include": [
    "src",
    ".eslintrc.js",
    "webpack.config.js",
    "electron.config.js"
  ]
}