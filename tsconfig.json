{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "paths": {
      "@doombox/*": ["./src/lib/*"],
    }
  },
  "include": [
    "src",
    "scripts",
    ".eslintrc.js",
    "webpack.config.js",
    "electron.config.js"
  ]
}