{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2019", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,

    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@doombox-utils": ["./src/utils"],
      "@doombox-utils/*": ["./src/utils/*"],
      "@doombox-config": ["./src/config"],
      "@doombox-config/*": ["./src/config/*"],
      "@doombox-intl": ["./src/intl/intl"],
      "@doombox-intl/*": ["./src/intl/*"]
    }
  },
  "include": [
    "src",
    ".eslintrc.js",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "userData",
    "scripts",
    "test",
    "dist",
    "docs"
  ]
}