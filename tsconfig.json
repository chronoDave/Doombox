{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2019", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,

    "baseUrl": "./",
    "outDir": "./build"
  },
  "include": [
    "src",
    "test",
    "scripts",
    ".eslintrc.js",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "userData",
    "dist",
    "docs"
  ]
}