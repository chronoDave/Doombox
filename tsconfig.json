{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "paths": {
      "@doombox-config": ["./src/config"],
      "@doombox-config/*": ["./src/config/*"],
      "@doombox-utils": ["./src/utils.ts"],
      "@doombox-types": ["./src/types.ts"],
      "@doombox-theme": ["./src/theme.ts"]
    }
  },
  "include": [
    "src",
    ".eslintrc.js",
    "webpack.config.js",
    "electron.config.js"
  ]
}