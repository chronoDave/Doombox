{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react",
    "jsxFactory": "forgo.createElement",
    "jsxFragmentFactory": "forgo.Fragment",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "importHelpers": true,

    "outDir": "build",
    "paths": {
      "strtok3/core": ["./node_modules/strtok3/lib/core"]
    }
  },
  "include": [
    "src",
    "test",
    "scripts",
    ".eslintrc.js",
    ".electron.config.js",
    "webpack.config.js"
  ],
}