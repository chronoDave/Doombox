{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@doombox-utils": ["./src/utils"],
      "@doombox-utils/*": ["./src/utils/*"],
      "@doombox-config": ["./src/config"],
      "@doombox-config/*": ["./src/config/*"],
      "@doombox-intl": ["./src/intl"],
      "@doombox-intl/*": ["./src/intl/*"]
    },
    "module": "commonjs"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "userData",
    "scripts",
    "test",
    "dist",
    "docs"
  ]
}