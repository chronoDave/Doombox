{
  "name": "@doombox/electron",
  "version": "1.0.0-ce",
  "license": "GNU General Public License",
  "author": "Chronocide",
  "main": "./src",
  "scripts": {
    "start": "nodemon --watch src --exec electron .",
    "start:dev": "nodemon --watch src --exec cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "test:unit": "tap --files=src/**/*.spec.js --no-coverage",
    "arkit": "arkit -c ../../arkit/arkit-electron.js"
  },
  "dependencies": {
    "@doombox/utils": "./packages/doombox-utils",
    "discord-rpc": "^3.1.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "lodash.debounce": "^4.0.8",
    "music-metadata": "^5.0.1",
    "nedb": "^1.8.0",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "electron": "7.1.1",
    "electron-builder": "^22.1.0",
    "electron-mocha": "^8.1.2"
  },
  "build": {
    "appId": "com.electron.doombox",
    "productName": "Doombox",
    "copyright": "Â©2020 ${author}",
    "electronVersion": "7.1.1",
    "directories": {
      "output": "../../build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "uninstallDisplayName": "Uninstall Doombox"
    },
    "win": {
      "target": "nsis",
      "publisherName": "Chronocide"
    }
  }
}
