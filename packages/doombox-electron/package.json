    "chokidar": "^3.4.2",
    "cross-env": "^7.0.2",
    "electron": "10.1.0",
    "electron-builder": "^22.8.0",
    "fs-webpack-plugin": "^2.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
