{
  "name": "@doombox/electron",
  "version": "1.0.0-ce",
  "license": "GNU General Public License",
  "author": "Chronocide",
  "main": "./src",
  "scripts": {
    "start": "nodemon --watch src --exec electron .",
    "start:dev": "nodemon --watch src --exec cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "test": "mocha",
    "test:dev": "cross-env NODE_ENV=development mocha"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "music-metadata": "^5.0.1",
    "nedb": "^1.8.0",
    "@doombox/utils": "./packages/doombox-utils"
  },
  "devDependencies": {
    "electron": "^7.1.1",
    "electron-builder": "^22.1.0",
    "spectron": "^9.0.0"
  },
  "build": {
    "appId": "com.electron.doombox",
    "productName": "Doombox",
    "copyright": "Â©2019 ${author}",
    "electronVersion": "7.1.1",
    "directories": {
      "output": "../../build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "uninstallDisplayName": "Uninstall Doombox"
    },
    "win": {
      "target": "nsis",
      "publisherName": "Chronocide"
    }
  }
}
