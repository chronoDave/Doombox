{
  "name": "@doombox/electron",
  "version": "2.0.0",
  "author": "Chronocide",
  "license": "GPL-3.0",
  "engines": {
    "node": "12.17.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development electron src/index.js",
    "test:unit": "tap --files=src/**/*.spec.js --no-coverage --reporter=spec",
    "clean": "yarn del-cli ../../dist -f",
    "build": "yarn clean && electron-builder --config .buildconfig.js",
    "build:fast": "yarn clean && electron-builder --config .buildconfig-debug.js --dir",
    "build:publish": "yarn clean && electron-builder --config .buildconfig.js -p always"
  },
  "dependencies": {
    "@doombox/utils": "./packages/doombox-utils",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "lodash.debounce": "^4.0.8",
    "music-metadata": "^7.0.0",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "electron": "9.0.0",
    "electron-builder": "^22.7.0",
    "electron-updater": "^4.3.1"
  }
}
