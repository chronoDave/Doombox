{
  "name": "doombox",
  "version": "2.0.0",
  "description": "Music player for your unwieldy music collection",
  "repository": {
    "type": "git",
    "url": "https://github.com/chronoDave/Doombox.git"
  },
  "author": "Chronocide",
  "private": true,
  "license": "GPL-3.0",
  "engines": {
    "node": ">=16.7.0"
  },
  "scripts": {
    "lint:eslint": "eslint src test",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm run lint:tsc && npm run lint:eslint",
    "start:app": "node scripts/esbuild.js -w",
    "start:renderer": "webpack --mode development -w",
    "start:electron": "nodemon --config .nodemon.json",
    "build:test": "node scripts/tape.renderer.js && node scripts/tape.app.js",
    "build:renderer": "webpack --mode production",
    "build:app": "node scripts/esbuild.js",
    "build:electron": "electron-builder -p=never -c .electron.config.js",
    "build": "npm run build:app && npm run build:renderer && npm run build:electron",
    "test:app": "npm run build:test && tape build/test/app/**/*.spec.js",
    "test:utils": "npm run build:test && tape build/test/utils/**/*.spec.js",
    "test:renderer": "npm run build:test && tape build/test/renderer/**/*.spec.js",
    "test": "npm run build:test && tape build/test/**/*.spec.js"
  },
  "devDependencies": {
    "@types/howler": "^2.2.7",
    "@types/jsdom": "^20.0.0",
    "@types/lodash.get": "^4.4.7",
    "@types/node": "^20.1.0",
    "@types/sharp": "^0.30.5",
    "@types/tape": "^4.13.2",
    "@types/wanakana": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "chokidar": "^3.5.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "electron": "^22.0.0",
    "electron-builder": "^24.2.1",
    "esbuild": "^0.17.18",
    "esbuild-loader": "^3.0.1",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.30.1",
    "jsdom": "^20.0.0",
    "mini-css-extract-plugin": "^2.6.1",
    "nodemon": "^2.0.19",
    "sass": "^1.54.0",
    "sass-loader": "^13.0.2",
    "tape": "^5.5.3",
    "typescript": "^4.7.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "fast-deep-equal": "^3.1.3",
    "fast-glob": "^3.2.11",
    "forgo": "^3.2.2",
    "howler": "^2.2.3",
    "immer": "^9.0.15",
    "leaf-db": "^9.0.0",
    "lodash.get": "^4.4.2",
    "music-metadata": "^8.1.0",
    "p-map": "^5.5.0",
    "sharp": "^0.30.7",
    "tabbable": "^6.1.2",
    "wanakana": "^5.1.0"
  }
}
